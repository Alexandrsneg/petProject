<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <corners android:radius="50dp" />
            <gradient
                android:angle="-135"
                android:startColor="#99EBEB"
                android:endColor="#58B0FA" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <corners android:radius="50dp" />
            <gradient
                android:angle="-45"
                android:startColor="#99EBEB"
                android:endColor="#58B0FA" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="50dp" />
                    <padding
                        android:left="2dp"
                        android:top="2dp"
                        android:right="2dp"
                        android:bottom="2dp" />
                    <stroke android:color="#58B0FA" android:width="2dp" />
                </shape>
            </item>
            <item>
                <shape>
                    <corners android:radius="50dp" />
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>